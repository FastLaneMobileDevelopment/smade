<?xml version="1.0" encoding="utf-8"?>
<io.bega.servicebase.screen.base.RootBaseView xmlns:android="http://schemas.android.com/apk/res/android"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:background="@color/splash_background_top">

	<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:src="@drawable/service_splash_portrait"/>

	<RelativeLayout
			android:layout_width="256dp"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"

			android:layout_marginBottom="15dp">

		<Button
				style="@style/AppTheme.Button.Flat"
				android:id="@+id/register_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:textColor="@android:color/white"
				android:textSize="24sp"
				android:text="Join"/>

		<Button
				style="@style/AppTheme.Button.Flat"
				android:id="@+id/login_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				android:textColor="@android:color/white"
				android:textSize="24sp"
				android:text="Login"/>
	</RelativeLayout>

</io.bega.servicebase.screen.base.RootBaseView>
