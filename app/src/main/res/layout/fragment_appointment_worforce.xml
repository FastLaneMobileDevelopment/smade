<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.appointment.fragments.AppointmentWorkforceFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_grey_850">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/appointment.workforcetab.workforce"
            android:layout_weight="3"
            android:layout_margin="@dimen/default_padding"
            android:id="@+id/fragment_appointment_workforce_workforce_text"/>

        <EditText
            android:layout_margin="@dimen/default_edit_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="€"
            android:inputType="numberDecimal"
            android:id="@+id/fragment_appointment_workforce_workforce"
            />

    </LinearLayout>


    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/window_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding"
        android:text="@string/appointment.workforcetab.material"
        android:id="@+id/fragment_appointment_workforce_material_text_main"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding"
        android:text="Por el industrial"
        android:id="@+id/fragment_appointment_workforce_material_text"
        android:layout_weight="3"

        />

    <EditText
        android:layout_margin="@dimen/default_edit_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_weight="2"
        android:hint="€"
        android:id="@+id/fragment_appointment_workforce_material"
        />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Por la empresa"
        android:layout_margin="@dimen/default_padding"
        android:id="@+id/fragment_appointment_workforce_materialcompany_text"/>

    <EditText
        android:layout_margin="@dimen/default_edit_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_weight="2"
        android:hint="€"
        android:id="@+id/fragment_appointment_workforce_materialcompany"
        />

        </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/window_background"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_margin="@dimen/default_padding"
        android:text="@string/appointment.workforcetab.cash"
        android:id="@+id/fragment_appointment_workforce_cash_text"/>

    <EditText
        android:layout_margin="@dimen/default_edit_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/fragment_appointment_workforce_cash"
        android:hint="€"
        android:layout_weight="2"
        />


        </LinearLayout>


    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/window_background"/>

    <CheckBox
        android:layout_margin="@dimen/default_edit_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/appointment.workforcetab.cashincompany"
        android:id="@+id/fragment_appointment_workforce_cahincompany"
        />

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/window_background"/>

    <EditText
        android:layout_margin="@dimen/default_edit_padding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Notas"
        android:lines="20"
        android:minLines="5"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:inputType="textEmailAddress|textMultiLine"
        android:id="@+id/fragment_appointment_workforce_notes"
        android:layout_weight="2"
        />





</LinearLayout>

</FrameLayout>
